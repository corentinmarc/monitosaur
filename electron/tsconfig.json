{
  "compilerOptions": {
    "baseUrl": "../app/src",
    "rootDir": "../",
    "target": "ES5",
    "jsx": "react",
    "module": "ES6",
    "moduleResolution": "Node",
    "noEmitOnError": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": [
      "dom",
      "dom.iterable",
      "es2017",
      "esnext.asynciterable",
      "scripthost"
    ],
  },
  "include": [
    "../app",
    "./src"
  ],
  "exclude": [
    "../app/**/*.test.ts",
    "../app/**/*.test.tsx"
  ],
}
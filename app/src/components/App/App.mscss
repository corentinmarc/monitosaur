.container {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  background: linear-gradient(45deg, #3d7dca, #3023ae);
  font-family: 'Mukta Mahee', sans-serif;
  color: #fff;
}

.leftPanel {
  flex: 200px 0 0;
  background: rgba(0, 0, 0, 0.1);
  border-right: 1px solid rgba(255, 255, 255, 0.5);
}

.rightPanel {
  flex: 300px 0 0;
  background: rgba(0, 0, 0, 0.1);
  border-left: 1px solid rgba(255, 255, 255, 0.5);
}

.contentPanel {
  flex: 500px 1 1;
}

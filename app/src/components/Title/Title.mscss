.container {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 140px;
}

.title {
  color: #fff;
  font-size: 22px;
  font-weight: 100;
  text-align: center;
  text-transform: uppercase;
  letter-spacing: 0.3em;
  text-shadow: 2px 2px rgba(0, 0, 0, .5);
  padding: 50px 0;
  margin: 0;
}
